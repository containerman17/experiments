{
  "compilerOptions": {
    "module": "nodenext",
    "target": "es2017",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./",
    "resolveJsonModule": true,
    "types": ["node"]
  },
  "include": [
    "index.ts"
  ],
  "exclude": [
    "node_modules"
  ]
} 
