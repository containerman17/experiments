FROM golang:1.24-alpine AS builder
RUN apk add --no-cache gcc musl-dev
WORKDIR /src
COPY go.mod go.sum ./
RUN go mod download
COPY . .
RUN CGO_ENABLED=0 go build -ldflags="-s -w" -o /gas-burner .

FROM alpine:3.21
RUN apk add --no-cache ca-certificates
COPY --from=builder /gas-burner /usr/local/bin/gas-burner
ENTRYPOINT ["gas-burner"]
